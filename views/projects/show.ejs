<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= project.name %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    <h1><%= project.name %></h1>
    <p><%= project.description %></p>
    <p>Author: <%= project.author %></p>
    <h2>Issues</h2>
    <form method="GET" action="">
        <input type="text" name="search" placeholder="Search by title or description">
        <input type="text" name="author" placeholder="Filter by author">
        <input type="text" name="labels" placeholder="Filter by labels (comma separated)">
        <button type="submit">Search</button>
    </form>
    <ul>
        <% issues.forEach(issue => { %>
            <li>
                <strong><%= issue.title %></strong><br>
                <%= issue.description %><br>
                <small>Labels: <%= issue.labels.join(', ') %></small><br>
                <small>Author: <%= issue.author %></small>
            </li>
        <% }) %>
    </ul>
    <a href="/projects/<%= project._id %>/issues/new">Create New Issue</a>
    <a href="/projects">Back to Projects</a>
    <%- include('../partials/footer') %>
</body>
</html>
